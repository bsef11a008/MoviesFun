@model EADProject.Views.Models.Users

        <div id="templatemo_main">
    <div class="col_w960">

        <div class="col_w450 float_l">
            <h2>Its Fun Place</h2>
            <p><em>Hello and welcome to the fun place, Where you will find about all of your favourite movies and stars</em></p>
            <p> Just Sign in and start exploring this fun place</p>

            @*<form action="/Home/signin" method="post">*@
            @using (Html.BeginForm("signin", "Home", FormMethod.Post))
            {   @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.Label("", "Email")
                <br>
                @Html.TextBoxFor(x => x.Email, new { type = "text", maxlength = "30" })
                @Html.ValidationMessageFor(x => x.Email)
                <br>
                @Html.Label("", "Password")
                <br>
                @Html.TextBoxFor(x => x.Password, new { type = "password", maxlength = "30" })
                @Html.ValidationMessageFor(x => x.Password)
                <br>
                <input type="submit" class="btnLogin" value="Signin" />
            }
            @*<label>Email   </label>*@

            <footer>
                <br><br>
                <label>Not A User Yet? Click here to <a href="~/Home/Signup" class="current">Sign up</a></label>

            </footer>

        </div>

